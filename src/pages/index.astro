<style>
	/* Hero Section - Full Width */
	.hero {
		width: 100%;
		margin-bottom: 5rem;
	}

	.hero-video {
		width: 100%;
		height: auto;
		display: block;
	}

	/* Content Section */
	.content {
		max-width: 1000px;
		margin: 0 auto 6rem;
		padding: 0 3rem;
	}

	.main-heading {
		font-size: clamp(3rem, 8vw, 7rem);
		font-style: italic;
		margin-bottom: 2rem;
		letter-spacing: 0.01em;
		line-height: 1.1;
	}

	.subheading {
		font-family: 'Instrument Serif', Georgia, serif;
		font-size: clamp(1.5rem, 4vw, 2.5rem);
		font-weight: 400;
		font-style: italic;
		margin-bottom: 4rem;
		color: var(--color-text);
		line-height: 1.3;
		letter-spacing: 0.01em;
	}

	.about p {
		font-size: clamp(1.125rem, 2.5vw, 1.5rem);
		margin-bottom: 1.75rem;
		line-height: 1.7;
	}

	.greeting {
		font-size: clamp(1.25rem, 3vw, 1.75rem);
		margin-bottom: 2.5rem !important;
	}

	.closing {
		margin-top: 2.5rem;
	}

	.stay-tuned {
		font-size: clamp(1.25rem, 3vw, 1.75rem);
	}

	/* News Section */
	.news-section {
		max-width: 1000px;
		margin: 0 auto 5rem;
		padding: 0 3rem;
	}

	.section-heading {
		font-size: clamp(2rem, 5vw, 3rem);
		font-style: italic;
		margin-bottom: 2rem;
		letter-spacing: -0.03em;
		line-height: 1.1;
	}

	.news-cards {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.news-card {
		border: 1px solid var(--color-border);
		border-radius: 8px;
		padding: 2rem;
		transition: all 0.3s ease;
	}

	.news-card:hover {
		border-color: var(--color-text);
	}

	.card-link {
		display: block;
		color: inherit;
		text-decoration: none;
	}

	.card-link:hover {
		opacity: 1;
		text-decoration: none;
	}

	.card-date {
		display: block;
		font-size: 0.875rem;
		color: var(--color-text-secondary);
		margin-bottom: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.card-title {
		font-size: clamp(1.5rem, 3vw, 2rem);
		font-style: italic;
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
		line-height: 1.2;
	}

	.card-excerpt {
		font-size: clamp(1rem, 2vw, 1.125rem);
		line-height: 1.6;
		color: var(--color-text-secondary);
	}

	/* Social Links Section */
	.social-links {
		max-width: 1000px;
		margin: 0 auto 6rem;
		padding: 0 3rem;
	}

	.social-icons {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 2rem;
		flex-wrap: wrap;
	}

	.social-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 48px;
		height: 48px;
		border: 1px solid var(--color-border);
		border-radius: 50%;
		transition: all 0.3s ease;
		text-decoration: none;
	}

	.social-icon:hover {
		transform: scale(1.1);
		border-color: var(--color-text);
		text-decoration: none;
	}

	.social-icon svg {
		width: 24px;
		height: 24px;
	}

	/* Footer */
	.footer {
		text-align: center;
		padding: 3rem 3rem;
		color: var(--color-text-secondary);
		font-size: 0.875rem;
		border-top: 1px solid var(--color-border);
	}

	/* Responsive adjustments */
	@media (max-width: 768px) {
		.theme-toggle {
			top: 1.5rem;
			right: 1.5rem;
			width: 44px;
			height: 44px;
		}

		.hero {
			margin-bottom: 3rem;
		}

		.content {
			margin-bottom: 4rem;
			padding: 0 1.5rem;
		}

		.news-section {
			margin-bottom: 3rem;
			padding: 0 1.5rem;
		}

		.news-cards {
			gap: 1.5rem;
		}

		.news-card {
			padding: 1.5rem;
		}

		.social-links {
			margin-bottom: 4rem;
			padding: 0 1.5rem;
		}

		.social-icons {
			gap: 1.5rem;
		}

		.social-icon {
			width: 44px;
			height: 44px;
		}

		.footer {
			padding: 2rem 1.5rem;
		}
	}
</style>
