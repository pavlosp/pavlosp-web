---
import Layout from '../../layouts/Layout.astro';
import { posts } from '../../data/posts';
import { formatDateUK } from '../../utils/date';
---

<Layout title="News - Pavlos Papaefstathiou">
	<main>
		<div class="container">
			<header class="header">
				<a href="/" class="back-link">‚Üê Back to home</a>
				<h1 class="page-title">News</h1>
			</header>

			<div class="news-cards">
				{posts.map((post) => (
					<article class="news-card">
						<a href={`/news/${post.slug}`} class="card-link">
							<time class="card-date">{formatDateUK(post.date)}</time>
							<h2 class="card-title">{post.title}</h2>
							<p class="card-excerpt">{post.excerpt}</p>
						</a>
					</article>
				))}
			</div>
		</div>
	</main>
</Layout>

<style>
	/* Container */
	.container {
		max-width: 900px;
		margin: 0 auto;
		padding: 5rem 2rem 3rem;
	}

	/* Header */
	.header {
		margin-bottom: 4rem;
	}

	.back-link {
		display: inline-block;
		font-size: 1rem;
		margin-bottom: 2rem;
		color: var(--color-text-secondary);
		text-decoration: none;
	}

	.back-link:hover {
		opacity: 1;
		color: var(--color-text);
		text-decoration: none;
	}

	.page-title {
		font-size: clamp(3rem, 8vw, 6rem);
		font-style: italic;
		margin-bottom: 1rem;
		letter-spacing: -0.03em;
		line-height: 0.95;
	}

	/* News Cards */
	.news-cards {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.news-card {
		border: 1px solid var(--color-border);
		border-radius: 8px;
		padding: 2rem;
		transition: all 0.3s ease;
	}

	.news-card:hover {
		border-color: var(--color-text);
	}

	.card-link {
		display: block;
		color: inherit;
		text-decoration: none;
	}

	.card-link:hover {
		opacity: 1;
		text-decoration: none;
	}

	.card-date {
		display: block;
		font-size: 0.875rem;
		color: var(--color-text-secondary);
		margin-bottom: 1rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.card-title {
		font-size: clamp(1.5rem, 3vw, 2rem);
		font-style: italic;
		margin-bottom: 1rem;
		letter-spacing: -0.02em;
		line-height: 1.2;
	}

	.card-excerpt {
		font-size: clamp(1rem, 2vw, 1.125rem);
		line-height: 1.6;
		color: var(--color-text-secondary);
	}

	/* Responsive */
	@media (max-width: 768px) {
		.container {
			padding: 4rem 1.5rem 2rem;
		}

		.header {
			margin-bottom: 3rem;
		}

		.news-cards {
			gap: 1.5rem;
		}

		.news-card {
			padding: 1.5rem;
		}
	}
</style>

